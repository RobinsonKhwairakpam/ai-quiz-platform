generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  clerkId String @unique
  email String @unique
  quiz Quiz[]
}

model Quiz {
  id             String     @id @default(uuid())
  userId         String
  type           QuizType   // QUIZ or QUESTIONNAIRE
  duration       DateTime?
  score          Float?     // Only for QUIZ
  improvementTip String?    // Only for QUIZ
  questions      Question[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Question {
  id          String   @id @default(uuid())
  quizId      String
  question    String
  answer      String?   // User's answer (for both types)
  options     String[] // For QUIZ only
  correct     String?   // Correct answer (for QUIZ only)
  explanation String?   // For QUIZ only

  quiz Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)
}

enum QuizType {
  QUIZ
  QUESTIONNAIRE
}
